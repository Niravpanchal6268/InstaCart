<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Auth.Auth.OnBoardingMainActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/onboarding_sliderViewPager_id"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        tools:ignore="SpeakableTextPresentCheck" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/onboarding_next_btn_id"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/onboarding_sliderViewPager_id"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="10dp"
        android:elevation="25dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="5dp"
        android:text="Next"
        android:textSize="15dp"
        app:elevation="25dp"
        app:shapeAppearanceOverlay="@style/Them.ShapeAppearanceOverlay.App.rounded" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/onboarding_previous_btn_id"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/onboarding_sliderViewPager_id"
        android:layout_marginStart="10dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="10dp"
        android:elevation="25dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="5dp"
        android:text="Back"
        android:textSize="15dp"
        app:elevation="25dp"
        app:shapeAppearanceOverlay="@style/Them.ShapeAppearanceOverlay.App.rounded" />


    <LinearLayout
        android:id="@+id/mDot_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" />

</RelativeLayout>